@page
@model IndexModel
@{
    ViewData["Title"] = "Dobra strona :)";
}

<div class="text-center">
    <h1 class="display-4">Welcome User</h1>
</div>
<form>
    <div class="form-group row mt-5 text-center">
        <div class="col">
            <label asp-for="Address.Street"></label>
            <input type="text" class="form-control" />
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Address.Number"></label>
            <input type="number" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="Address.ZipCode"></label>
            <input type="text" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="Address.City"></label>
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="row mt-5 text-center justify-content-center">
        <button class="btn btn-primary">Zatwierdź</button>
    </div>
</form>